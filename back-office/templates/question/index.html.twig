                                    {% for answer in jsonField %}
                                        {% if loop.first %}
                                            {{ answer.content }}
                                        {% else %}
                                            {{ answer.content }}
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    {% for additional in jsonField %}
                                        {{ additional }}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}
                        {% elseif type == 'qcm' %}

                        {% endif %}
                    {% endfor %}


                    {% for key, field in question.answer %}
                        {% if key == 'answers' %}
                            {% for answer in field %}
                                {% for type in question.types %}
                                    {% if type == 'input' %}
                                        {% if loop.first %}
                                            UNE FOIS
                                        {% endif %}
                                    {% elseif type == 'qcm' %}
                                        {% if answer.is_good_answer %}
                                            {{ answer.content }}
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}

{#                                {% if answer.is_good_answer %}#}
{#                                    {{ loop.first }}#}
{#                                    {{ answer.content }}#}
{#                                {% endif %}#}
                            {% endfor %}
                            SEE MORE
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{% for type in question.types %}
                        {{ type }}
                    {% endfor %}
                </td>
                <td>{% for category in question.categories %}
                        {{ category }}
                    {% endfor %}
                </td>
                <td>{{ question.difficulty }}</td>
                <td>{{ question.status }}</td>
{#                <td>{{ question.answer ? question.answer|json_encode : '' }}</td>#}


{#                <td>{{ question.media ? question.media|json_encode : '' }}</td>#}
                <td>{% if question.media|length > 0 %}
                    OUI
                    {% endif %}

{#                    <table>#}
{#                        {% for key, field in question.media %}#}
{#                            <tr>#}
