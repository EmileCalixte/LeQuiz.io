{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <h1>Question index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Content</th>
                <th>Answer</th>
                <th>Types</th>
                <th>Categories</th>
                <th>Difficulty</th>
