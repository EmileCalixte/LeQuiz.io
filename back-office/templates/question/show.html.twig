{% extends 'base.html.twig' %}

{% block title %}Visualiser une question{% endblock %}

{% block body %}
    <h1 class="title-page">Visualiser une question</h1>
    <a class="btn btn-primary mt-3" href="{{ path('question_index') }}">Retour à la liste</a>
    <div class="div-edit col-xl-7 col-12  mx-auto rounded shadow-lg mt-5 p-5 d-flex flex-column mb-3 justify-content-center">

        <div class="table text-center">
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Id</div>
                <div>{{ question.id }}</div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Type</div>
                <div>{% for type in question.types %}
                        {{ type }}
                    {% endfor %}
                </div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Difficulty</div>
                <div>{{ question.difficulty }}</div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Content</div>
                <div>{{ question.content }}</div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Answer</div>
                {#                <td>{{ question.answer ? question.answer|json_encode : '' }}</td>#}
                <div class="mt-3">
                    <div>
                        {% for key, field in question.answer %}
                            {% if key == 'answers' %}
                                <div class=" d-flex flex-column mb-3">
                                    <div>
                                        <div>
                                            {% for answers in field %}
                                                <div class=" d-flex flex-column mb-3">
                                                    {% for key, answerField in answers %}
                                                        <div>
                                                            {% if key == 'content' %}
                                                                <div>{{ answerField }}</div>
                                                            {% elseif key == 'is_good_answer' and answerField %}
                                                                (Bonne réponse)
                                                            {% endif %}
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% elseif key == 'additional' %}
                                <div class=" d-flex flex-column mb-3">
                                    <div>additional</div>
                                    <div>
                                        <div>
                                            {% for additional in field %}
                                                {% for key, additionalField in additional %}
                                                    <div class=" d-flex flex-column mb-3">
                                                        <div>
                                                            {{ key }} : {{ additionalField }}
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Status</div>
                <div>{{ question.status }}</div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Media</div>
                {#                <td>{{ question.media ? question.media|json_encode : '' }}</td>#}
                <div>
                    <div>
                        {% for key, field in question.media %}
                            <div class=" d-flex flex-column mb-3">
                                <div>{{ key }} </div>
                                <td>{{ field }}</td>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">CreatedAt</div>
                <div>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s T') : '' }}</div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">UpdatedAt</div>
                <div>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s T') : '' }}</div>
            </div>
            <div class=" d-flex flex-column mb-3">
                <div class="font-weight-bolder">Categories</div>
                <div class="d-flex flex-column">
                    {% for category in question.categories %}
                        <div>{{ category }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="d-flex">
            <a class="mt-3 col-12 col-sm-7 mx-auto btn btn-success" href="{{ path('question_edit', {'id': question.id}) }}">Modifier</a>
        </div>

        {{ include('question/_delete_form.html.twig') }}
    </div>
{% endblock %}
