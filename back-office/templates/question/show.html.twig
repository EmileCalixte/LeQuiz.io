{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1 class="title-page">Question</h1>
    <a class="btn btn-primary mt-3" href="{{ path('question_index') }}">Retour à la liste</a>
    <div class="div-edit col-xl-7 col-12  mx-auto rounded shadow-lg mt-5 p-5 d-flex flex-column justify-content-center">

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{% for type in question.types %}
                        {{ type }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ question.difficulty }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ question.content }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                {#                <td>{{ question.answer ? question.answer|json_encode : '' }}</td>#}
                <td>
                    <table>
                        {% for key, field in question.answer %}
                            {% if key == 'answers' %}
                                <tr>
                                    <th>answers</th>
                                    <td>
                                        <table>
                                            {% for answer in field %}
                                                <tr>
                                                    {% for key, answerField in answer %}
                                                        <td>
                                                            {% if key == 'content' %}
                                                                {{ answerField }}
                                                            {% elseif key == 'is_good_answer' and answerField %}
                                                                (Bonne réponse)
                                                            {% endif %}
                                                        </td>
                                                    {% endfor %}
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </td>
                                </tr>
                            {% elseif key == 'additional' %}
                                <tr>
                                    <th>additional</th>
                                    <td>
                                        <table>
                                            {% for additional in field %}
                                                {% for key, additionalField in additional %}
                                                    <tr>
                                                        <td>
                                                            {{ key }} : {{ additionalField }}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            {% endfor %}
                                        </table>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </table>
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ question.status }}</td>
            </tr>
            <tr>
                <th>Media</th>
                {#                <td>{{ question.media ? question.media|json_encode : '' }}</td>#}
                <td>
                    <table>
                        {% for key, field in question.media %}
                            <tr>
                                <th>{{ key }} </th>
                                <td>{{ field }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                    {% for category in question.categories %}
                        {{ category }}
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="mt-3 col-7 mx-auto btn btn-success" href="{{ path('question_edit', {'id': question.id}) }}">Modifier</a>
        </div>

        {{ include('question/_delete_form.html.twig') }}
    </div>
{% endblock %}
