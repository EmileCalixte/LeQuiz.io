<form  class="d-flex" method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="mt-3 col-12 col-sm-7 mx-auto btn btn-danger mx-auto">Supprimer</button>
</form>
