{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="title-page">QuestionType</h1>
    <a class="btn btn-primary" href="{{ path('user_index') }}">Retour Ã  la liste</a>
    <div class="div-edit col-xl-7 col-12  mx-auto rounded shadow-lg mt-5 p-5 d-flex flex-column justify-content-center ">


        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>PasswordResetToken</th>
                <td>{{ user.passwordResetToken }}</td>
            </tr>
            <tr>
                <th>LastResetPasswordEmailSendDate</th>
                <td>{{ user.lastResetPasswordEmailSendDate ? user.lastResetPasswordEmailSendDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Plan</th>
                <td>{{ user.plan }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>IsTrustyWriter</th>
                <td>{{ user.isTrustyWriter ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsBanned</th>
                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UnbanDate</th>
                <td>{{ user.unbanDate ? user.unbanDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ user.deletedAt ? user.deletedAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="mt-3 col-7 mx-auto btn btn-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
        </div>
        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
