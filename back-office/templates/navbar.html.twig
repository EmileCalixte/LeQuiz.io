<div id="navbar" class="d-flex flex-column p-3 text-white bg-dark">
    <a href="/" class="text-decoration-none d-flex justify-content-center">
        <img id="logo" src="/assets/images/leQuizlogo.svg" alt="Logo" width="70%"/>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto" data-controller="navbar">
    {% for navItemKey, navItem in navItems %}
        <li class="nav-item mb-1"
            data-link-id="{{ navItem.label }}-link"
            data-subLink-id="{{ navItem.label }}-subLinks"
            data-action="mouseenter->navbar#addActiveClass mouseleave->navbar#removeActiveClass"
        >
            {% if navItem.label == route %}
                <a href="{{ navItem.url }}" id="{{ navItem.label }}-link" class="nav-link text-white hard-active" aria-current="page">
                    {{ navItemKey }}
                </a>
            {% elseif navItem.label == 'logout' %}
                {% if app.user %}
                <a href="{{ navItem.url }}" id="{{ navItem.label }}-link" class="nav-link text-danger" aria-current="page">
                    {{ navItemKey }}
                </a>
                {% endif %}
            {% else %}
                <a href="{{ navItem.url }}" id="{{ navItem.label }}-link" class="nav-link text-white" aria-current="page">
                    {{ navItemKey }}
                </a>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
    <span class="copyright">leQuiz.io Â© 2021</span>
</div>
