{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="title-page">Catégorie</h1>
    <a class="btn btn-primary" href="{{ path('category_index') }}">Retour à la liste</a>
    <div class="div-edit col-xl-4 col-md-8 col-12  mx-auto rounded shadow-lg mt-5 p-5 d-flex flex-column justify-content-center">
    <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ category.label }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="mt-3 col-7 mx-auto btn btn-success" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

        </div>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
