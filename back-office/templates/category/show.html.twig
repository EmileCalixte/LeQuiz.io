{% extends 'base.html.twig' %}

{% block title %}Visualiser une catégorie{% endblock %}
{% block stylesheets %} {{ parent() }} {{ encore_entry_link_tags('category') }} {% endblock %}

{% block body %}
    <h1 class="title-page">Visualiser une catégorie</h1>
    <a class="btn btn-primary mt-3" href="{{ path('category_index') }}">Retour à la liste</a>
    <div class="div-edit col-xl-4 col-md-8 col-12 rounded mt-5 d-flex flex-column justify-content-center">
    <div class="table ">
            <div class="d-flex  mb-3">
                <div class="col-6 col-md-4 font-weight-bolder">Id</div>
                <td>{{ category.id }}</td>
            </div>
            <div  class="d-flex  mb-3">
                <div  class="col-6 col-md-4 font-weight-bolder">Name</div>
                <td>{{ category.name }}</td>
            </div>
            <div class="d-flex  mb-3">
                <div class="col-6 col-md-4 font-weight-bolder">Label</div>
                <td>{{ category.label }}</td>
            </div>
        </div>
        <div class="d-flex">
            <a class="mt-3 col-12 col-sm-7 mx-auto btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

        </div>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
