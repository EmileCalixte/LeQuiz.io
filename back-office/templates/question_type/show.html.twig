{% extends 'base.html.twig' %}

{% block title %}Visualiser un type de question{% endblock %}

{% block body %}
    <h1 class="title-page">Visualiser un type de question</h1>
    <a class="btn btn-primary mt-3" href="{{ path('question_type_index') }}">Retour Ã  la liste</a>
    <div class="div-edit col-xl-4 col-md-8 col-12  mx-auto rounded shadow-lg mt-5 p-5 d-flex flex-column justify-content-center">
        <div class="table text-center">
            <div class="d-flex flex-column mb-3">
                <div class="font-weight-bolder">Id</div>
                <td>{{ question_type.id }}</td>
            </div>
            <div class="d-flex flex-column mb-3">
                <div  class="font-weight-bolder">Name</div>
                <td>{{ question_type.name }}</td>
            </div>
            <div class="d-flex flex-column mb-3">
                <div  class="font-weight-bolder">Label</div>
                <td>{{ question_type.label }}</td>
            </div>
            <div class="d-flex flex-column mb-3">
                <div class="font-weight-bolder">Ischild</div>
                <td>{{ question_type.ischild ? 'Yes' : 'No' }}</td>
            </div>
            <div class="d-flex flex-column mb-3">
                <div class="font-weight-bolder">CreatedAt</div>
                <td>{{ question_type.createdAt ? question_type.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
            </div>
            <div class="d-flex flex-column mb-3">
                <div class="font-weight-bolder">UpdatedAt</div>
                <td>{{ question_type.updatedAt ? question_type.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
            </div>
        </div>
        <div class="d-flex">
            <a class="mt-3 col-12 col-sm-7 mx-auto btn btn-success"
               href="{{ path('question_type_edit', {'id': question_type.id}) }}">Modifier</a>
        </div>
        {{ include('question_type/_delete_form.html.twig') }}
    </div>


{% endblock %}
