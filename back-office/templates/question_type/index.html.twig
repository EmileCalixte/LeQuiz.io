{% extends 'base.html.twig' %}

{% block title %}QuestionType index{% endblock %}

{% block body %}
    <h1>QuestionType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Label</th>
                <th>Ischild</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question_type in question_types %}
            <tr>
                <td>{{ question_type.id }}</td>
                <td>{{ question_type.name }}</td>
                <td>{{ question_type.label }}</td>
                <td>{{ question_type.ischild ? 'Yes' : 'No' }}</td>
                <td>{{ question_type.createdAt ? question_type.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
                <td>{{ question_type.updatedAt ? question_type.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
                <td>
                    <a href="{{ path('question_type_show', {'id': question_type.id}) }}">show</a>
                    <a href="{{ path('question_type_edit', {'id': question_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('question_type_new') }}">Create new</a>
{% endblock %}
