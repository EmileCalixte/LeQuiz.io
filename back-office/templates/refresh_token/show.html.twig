{% extends 'base.html.twig' %}

{% block title %}RefreshToken{% endblock %}

{% block body %}
    <h1 class="title-page">Token</h1>
    <a class="btn btn-primary" href="{{ path('refresh_token_index') }}">retour Ã  la liste</a>
    <div class="div-edit col-xl-4 col-md-8 col-12  mx-auto rounded shadow-lg mt-5 p-5 d-flex flex-column justify-content-center">
        <table class="table">
            <tbody>
            <tr>
                <th>Token</th>
                <td>{{ refresh_token.token }}</td>
            </tr>
            <tr>
                <th>ExpirationDate</th>
                <td>{{ refresh_token.expirationDate ? refresh_token.expirationDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>
                    {{ refresh_token.user ? refresh_token.user.username : 'Guest' }}
                </td>
            </tr>
            </tbody>
        </table>
        {{ include('refresh_token/_delete_form.html.twig') }}
    </div>
{% endblock %}
