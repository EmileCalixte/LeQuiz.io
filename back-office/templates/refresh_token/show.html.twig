{% extends 'base.html.twig' %}

{% block title %}RefreshToken{% endblock %}

{% block body %}
    <h1>RefreshToken</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Token</th>
                <td>{{ refresh_token.token }}</td>
            </tr>
            <tr>
                <th>ExpirationDate</th>
                <td>{{ refresh_token.expirationDate ? refresh_token.expirationDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>
                    {{ refresh_token.user ? refresh_token.user.username : 'Guest' }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('refresh_token_index') }}">back to list</a>

